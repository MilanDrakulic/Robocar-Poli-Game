using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class AudioEffectsManager : MonoBehaviour
{
	public AudioSource woodBreakingAudio;
	public AudioSource rockStumpAudio;

	// Use this for initialization
	void Start () {
		
	}
	
	// Update is called once per frame
	void Update () {
		
	}

	public void PlayWoodBreaking()
	{
		if (woodBreakingAudio != null && woodBreakingAudio.isActiveAndEnabled)
		{
			woodBreakingAudio.Play();
		}
	}

	public void PlayRockStump()
	{
		if (rockStumpAudio != null && rockStumpAudio.isActiveAndEnabled)
		{
			rockStumpAudio.Play();
		}
	}
}
